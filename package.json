{
  "name": "reactium-core-plugins",
  "version": "3.6.1",
  "description": "A framework for creating React + Redux apps using the domain driven design (DDD) paradigm.",
  "main": "index.js",
  "scripts": {
    "start": "node reactium_modules/@atomic-reactor/reactium-core/index.mjs",
    "build": "cross-env NODE_ENV=production gulp",
    "heroku-prebuild": "npx reactium install",
    "static": "npm-run-all build:* && gulp static",
    "local": "gulp local",
    "clean": "gulp clean",
    "precommit": "lint-staged"
  },
  "keywords": [
    "react",
    "redux",
    "framework",
    "javascript",
    "ddd"
  ],
  "author": "Cam Tullos <cam@tullos.ninja> (http://cam.tullos.ninja) and John Dillick <john@dillick.us>",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Atomic-Reactor/Reactium.git"
  },
  "browser": {
    "parse/node": false
  },
  "nodemonConfig": {
    "quite": true,
    "watch": [
      "src/manifest.js"
    ],
    "ignore": [
      "src/app/*",
      ".tmp/"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {},
  "workspaces": [
    "reactium_modules/*",
    "reactium_modules/@*/*"
  ]
}